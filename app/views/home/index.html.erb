<section class="landing">

  <div class="main-landing-container">
    <h1>Pickled Pirates Racing</h1>
    <div class="landing-background">
        <%= image_tag "landing.jpg", alt: "Pickled Pirates Racing" %>
    </div>
  </div>

  <div class="main-landing-products">
    <% if @featured_products.any? %>
        <h2>Featured Products</h2>

        <div class="products">
        <% @featured_products.each do |product| %>
            <%= link_to product_path(product), class: "featured-product-link", data: { turbo: false } do %>
                <div class="product">
                <% if product.image.present? %>
                    <%= image_tag product.image, alt: product.name %>
                <% end %>

                <h3><%= product.name %></h3>
                <p><%= product.description %></p>
                <p>$<%= number_with_precision(product.price, precision: 2) %></p>
                </div>
            <% end %>
            <% end %>
        </div>
    <% end %>

  </div>

<div class="main-landing-videos">

  <% if @featured_videos.any? %>
    <h2>Featured Videos</h2>

    <div class="videos">
      <% @featured_videos.each do |video| %>
        
        <div class="video">
          <iframe
            width="300"
            height="170"
            src="<%= youtube_embed(video) %>"
            frameborder="0"
            allowfullscreen>
          </iframe>
          <h5><%= video.title %></h5>
        </div>
        
      <% end %>
    </div>
  <% end %>
  </div>

</section>
