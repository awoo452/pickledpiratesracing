<section class="landing">
  <div class="main-landing-container">
    <div class="landing-background">
      <%= image_tag "landing0.1.85.png", alt: "Pickled Pirates Racing" %>
    </div>

    <div class="landing-overlay">
      <p class="landing-tagline">Racing since we canâ€™t remember. Pickled since forever.</p>
      <% unless user_signed_in? %>
        <div class="landing-cta">
          <%= link_to "Get Pickled", new_user_session_path, class: "cta-button" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="main-landing-videos">
    <% if @featured_videos.any? %>
      <h2>Latest Videos</h2>
      <div class="videos-grid">
        <% @featured_videos.each do |video| %>
          <%= render "videos/video_card", video: video, show_title: false %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="main-landing-products">
    <% if @featured_products.any? %>
      <h2>Featured Products</h2>
      <div class="products">
        <% @featured_products.each do |product| %>
          <%= render "products/product_card", product: product, link_class: "featured-product-link" %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
