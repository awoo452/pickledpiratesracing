<section class="videos-page">

  <h1>Videos</h1>

  <% if @videos.any? %>
    <div class="videos-grid">
      <% @videos.each do |video| %>
        <div class="video-card">
          <div class="video-frame">
            <div class="youtube-placeholder" data-embed-url="<%= youtube_embed(video) %>">
              <button type="button" class="youtube-play">Play video</button>
            </div>
          </div>

          <h4><%= video.title %></h4>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="empty-state">No videos yet.</p>
  <% end %>

</section>
