<section class="videos-page">
  <h1>Videos</h1>

  <% if @videos.any? %>
    <div class="videos-grid">
      <% @videos.each do |video| %>
        <%= render "videos/video_card", video: video %>
      <% end %>
    </div>
  <% else %>
    <p class="empty-state">No videos yet.</p>
  <% end %>
</section>
