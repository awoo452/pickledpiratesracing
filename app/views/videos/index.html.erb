<section class="videos-page">

  <h1>Videos</h1>

  <div class="videos-grid">
    <% @videos.each do |video| %>
      <div class="video-card">

        <div class="video-frame">
          <iframe
            class="youtube-video"
            src="<%= youtube_embed(video) %>"
            frameborder="0"
            allowfullscreen>
          </iframe>
        </div>

        <h4><%= video.title %></h4>

      </div>
    <% end %>
  </div>

</section>
