<section class="contact">
  <div class="contact-card">
    <h1>Contact</h1>

    <%= form_with url: contact_path, method: :post, html: { class: "contact-form" } do %>
      <div class="contact-field">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, required: true %>
      </div>

      <div class="contact-field">
        <%= label_tag :message %>
        <%= text_area_tag :message, nil, required: true %>
      </div>

      <%= submit_tag "Send", class: "contact-submit" %>
    <% end %>

    <p class="contact-legal">
      By sending a message you agree to the
      <%= link_to "Terms", "/terms" %>
      and
      <%= link_to "Privacy Policy", "/privacy" %>.
    </p>
  </div>
</section>
