<!-- app/views/contact/new.html.erb -->
<section class="contact">
<h1>Contact</h1>

<%= form_with url: contact_path, method: :post do %>
  <div>
    <%= label_tag :email %><br>
    <%= email_field_tag :email, nil, required: true %>
  </div>

  <div>
    <%= label_tag :message %><br>
    <%= text_area_tag :message, nil, required: true %>
  </div>

  <br>
  <%= submit_tag "Send" %>
<% end %>
</section>