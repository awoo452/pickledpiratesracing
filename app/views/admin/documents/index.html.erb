<section class="admin-shell">
  <div class="admin-page">
    <header class="admin-hero admin-hero--compact">
      <div>
        <p class="admin-kicker">Docs</p>
        <h1 class="admin-title">Site guide</h1>
        <p class="admin-subtitle">Clear explanations of how the site works and the most common questions.</p>
      </div>
      <div class="admin-hero-actions">
        <%= link_to "New doc", new_admin_document_path, class: "admin-primary-button" %>
        <%= link_to "Back to admin", admin_root_path, class: "admin-secondary-link" %>
      </div>
    </header>

    <% if @documents.any? %>
      <table class="admin-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Created</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @documents.each do |document| %>
            <tr>
              <td><%= link_to document.title, admin_document_path(document) %></td>
              <td><%= document.created_at.strftime("%Y-%m-%d") %></td>
              <td>
                <%= link_to "Edit", edit_admin_document_path(document) %> |
                <%= button_to "Delete", admin_document_path(document),
                              method: :delete,
                              form: { data: { turbo_confirm: "Delete this doc?" } },
                              class: "admin-link-button" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="empty-state">No docs yet.</p>
    <% end %>
  </div>
</section>
