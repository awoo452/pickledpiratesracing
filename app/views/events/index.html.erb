<section class="events-page">

  <h1>Events</h1>

  <% if @events.any? %>
    <div class="events-grid">
      <% @events.each do |event| %>
        <div class="event-card">
          <% image_url = image_proxy_url(event.image_key, width: 320, height: 200, fit: "cover", format: "webp") || event.image_url %>
          <div class="event-image">
            <%= image_tag(image_url.presence || image_path("comingsoon.png"),
                          alt: event.title.presence || "Image coming soon",
                          loading: "lazy") %>
          </div>
          <h2><%= event.title %></h2>
          <p class="event-date"><%= event.event_date.strftime("%B %d, %Y") %></p>
          <% if event.location.present? %>
            <p class="event-location"><%= event.location %></p>
          <% end %>
          <% if event.description.present? %>
            <p class="event-description"><%= event.description %></p>
          <% end %>
          <% alt_url = image_proxy_url(event.image_alt_key, width: 240, height: 160, fit: "cover", format: "webp") || event.image_alt_url %>
          <% if alt_url.present? %>
            <div class="event-image event-image--alt">
              <%= image_tag alt_url, alt: "#{event.title} alternate", loading: "lazy" %>
            </div>
          <% end %>
          <% if event.link.present? %>
            <%= link_to "More info", event.link, class: "event-link", target: "_blank", rel: "noopener" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="empty-state">No events yet.</p>
  <% end %>

</section>
