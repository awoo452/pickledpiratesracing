<section class="page-shell page-shell--about">
  <% hero_image = @about&.image_key.presence || "about-hero.jpg" %>
  <% hero_image = "about-hero.jpg" if hero_image == "dan55.jpg" %>
  <div class="page-hero" style="<%= "--page-hero-image: url('#{image_path(hero_image)}')" %>">
    <div class="page-hero-card">
      <% eyebrow = @about&.eyebrow.presence || "Pickled Pirates Racing" %>
      <p class="page-eyebrow"><%= eyebrow %></p>
      <h1 class="page-title">About Pickled Pirates</h1>
      <p class="page-lede"><%= @about.lede %></p>
      <% if @about.mission.present? %>
        <p class="page-subcopy"><%= @about.mission %></p>
      <% end %>
      <div class="page-actions">
        <%= link_to "Shop the gear", products_path, class: "cta-button" %>
        <%= link_to "Watch the videos", videos_path, class: "cta-button" %>
        <% if user_signed_in? %>
          <%= link_to "Swap Meet", parts_path, class: "cta-button" %>
          <%= link_to "Upcoming events", events_path, class: "cta-button" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
