<section class="about">
  <div class="about-hero">
    <p class="about-eyebrow"><%= @about.eyebrow %></p>

    <h1><%= @about.title %></h1>

    <p class="about-lede"><%= @about.lede %></p>

    <% if @about.mission.present? %>
      <p class="about-mission">
        <%= @about.mission %>
      </p>
    <% end %>

    <% if @about.image_key.present? %>
      <div class="about-image">
        <%= image_tag @about.image_key, alt: @about.title %>
        <div class="about-actions about-actions--overlay">
          <%= link_to "Shop the gear", products_path, class: "cta-button" %>
          <%= link_to "Watch the videos", videos_path, class: "cta-button" %>
        </div>
      </div>
    <% else %>
      <div class="about-actions">
        <%= link_to "Shop the gear", products_path, class: "cta-button" %>
        <%= link_to "Watch the videos", videos_path, class: "cta-button" %>
      </div>
    <% end %>
  </div>
</section>
